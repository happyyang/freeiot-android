<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >

   <Button
        android:id="@+id/btn_control_open"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/btn_control_open" /> 
        
   <Button
        android:id="@+id/btn_control_close"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@id/btn_control_open"
        android:layout_height="60dp"
        android:text="@string/btn_control_close" /> 
        
   <Button
        android:id="@+id/btn_control_color"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@id/btn_control_close"
        android:layout_height="60dp"
        android:text="@string/btn_control_color" /> 
    
   <Button
        android:id="@+id/btn_back"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@id/btn_control_color"
        android:layout_height="60dp"
        android:text="@string/btn_back" /> 

</RelativeLayout>
